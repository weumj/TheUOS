<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    app:cardCornerRadius="0dp">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="?color_primary_text"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleFadeDuration="50"
        app:mrl_rippleInAdapter="false">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="6"
            android:rowCount="3">

            <TextView
                android:id="@+id/tab_wise_score_text1"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="1" />

            <TextView
                android:id="@+id/tab_wise_score_text2"
                android:layout_columnSpan="2"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="2" />

            <TextView
                android:id="@+id/tab_wise_score_text3"
                android:layout_columnSpan="2"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="3" />

            <TextView
                android:id="@+id/tab_wise_score_text4"
                android:layout_columnSpan="3"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="4" />

            <TextView
                android:id="@+id/tab_wise_score_text5"
                android:layout_columnSpan="3"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="5" />

            <TextView
                android:id="@+id/tab_wise_score_text6"
                android:layout_columnSpan="3"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="6" />

            <TextView
                android:id="@+id/tab_wise_score_text7"
                android:layout_columnSpan="3"
                android:layout_rowSpan="1"
                android:padding="10dp"
                android:text="7" />

        </GridLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/tab_book_list_search"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:animateLayoutChanges="true"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:fastScrollEnabled="true"
        android:scrollbarStyle="outsideOverlay"
        android:indicatorRight="5dp"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:scrollingCache="true" />

    <RelativeLayout
        android:id="@+id/tab_book_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/tab_book_search_empty_info1_ripple"
            android:padding="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            app:mrl_rippleColor="?color_primary_text"
            app:mrl_rippleDelayClick="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tab_book_search_empty_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="?theme_ic_action_action_search"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="@string/tab_book_empty_text1" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/tab_book_search_empty_info2_ripple"
            android:padding="4dp"
            android:layout_width="wrap_content"
            app:mrl_rippleColor="?color_primary_text"
            app:mrl_rippleDelayClick="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tab_book_search_empty_info1_ripple"
            android:layout_alignRight="@id/tab_book_search_empty_info1_ripple"
            android:layout_below="@id/tab_book_search_empty_info1_ripple">

            <TextView
                android:id="@+id/tab_book_search_empty_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="?theme_ic_action_action_help"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="@string/tab_book_empty_text2" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/tab_book_search_empty_info3_ripple"
            android:padding="4dp"
            android:layout_width="wrap_content"
            app:mrl_rippleColor="?color_primary_text"
            app:mrl_rippleDelayClick="false"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tab_book_search_empty_info1_ripple"
            android:layout_alignRight="@id/tab_book_search_empty_info1_ripple"
            android:layout_below="@id/tab_book_search_empty_info2_ripple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="?theme_ic_action_navigation_check"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="@string/tab_book_empty_text3" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </RelativeLayout>


</RelativeLayout>
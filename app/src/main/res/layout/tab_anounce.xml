<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <Spinner
            android:id="@+id/tab_announce_action_spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:entries="@array/tab_anounce_action_spinner" />

        <TextView
            android:id="@+id/tab_anounce_action_textView_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="?selector_button"
            android:gravity="center"
            android:textColor="?attr/colorAccent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <ListView
            android:id="@+id/tab_announce_list_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:listSelector="@android:color/transparent"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:scrollbars="none"
            android:scrollingCache="true" >
        </ListView>

        <TextView
            android:id="@+id/tab_anounce_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?selector_button"
            android:drawableLeft="?ic_navigation_accept"
            android:gravity="center_vertical"
            android:text="@string/tab_anounce_empty_view_desc"
            android:visibility="invisible" >
        </TextView>
    </RelativeLayout>

</LinearLayout>
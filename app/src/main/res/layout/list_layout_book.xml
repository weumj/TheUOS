<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    app:cardCornerRadius="6dp">

    <ImageView
        android:id="@+id/tab_booksearch_list_book_image"
        android:layout_width="90dp"
        android:layout_height="128dp"
        android:layout_gravity="top"
        android:layout_marginRight="3dp"
        android:contentDescription="@string/tab_book_book_opt"
        android:scaleType="fitXY"
        android:src="@drawable/noimg_en"
        android:transitionName="@string/tab_book_image_transition_name" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="90dp"
        android:minHeight="125dp"
        app:mrl_rippleColor="?colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/tab_booksearch_list_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tab_booksearch_list_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="?attr/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tab_booksearch_list_book_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tab_booksearch_list_book_title"
                android:layout_below="@id/tab_booksearch_list_book_title"
                android:gravity="center_vertical"
                android:textColorHighlight="@android:color/holo_blue_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tab_booksearch_list_text_publish_and_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tab_booksearch_list_book_title"
                android:layout_below="@id/tab_booksearch_list_book_writer"
                android:gravity="center_vertical"
                android:textColorHighlight="@android:color/holo_blue_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tab_booksearch_list_book_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tab_booksearch_list_book_title"
                android:layout_below="@id/tab_booksearch_list_text_publish_and_year"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tab_booksearch_list_book_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tab_booksearch_list_book_site"
                android:layout_below="@id/tab_booksearch_list_text_publish_and_year"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tab_booksearch_list_book_site"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/tab_booksearch_layout_book_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tab_booksearch_list_book_title"
                android:layout_below="@id/tab_booksearch_list_book_state"
                android:orientation="vertical" />
        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>
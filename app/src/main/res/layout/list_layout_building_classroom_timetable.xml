<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:divider="@null"
    android:dividerPadding="2dp"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:weightSum="360">

    <LinearLayout
        android:id="@+id/tab_timetable_list_period"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="48"
        android:background="?attr/cardBackgroundColor">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/tab_timetable_list_period_ripple"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:mrl_rippleColor="?colorPrimaryDark"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_timetable_list_text_period"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="?attr/colorPrimaryDark" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tab_timetable_list_text_mon"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:layout_weight="52"
        android:padding="2dp" />


    <TextView
        android:id="@+id/tab_timetable_list_text_tue"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:layout_weight="52"
        android:padding="2dp" />


    <TextView
        android:id="@+id/tab_timetable_list_text_wed"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:layout_weight="52"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tab_timetable_list_text_thr"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:layout_weight="52"
        android:padding="2dp" />


    <TextView
        android:id="@+id/tab_timetable_list_text_fri"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:layout_weight="52"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tab_timetable_list_text_sat"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:layout_weight="52"
        android:padding="2dp" />

</LinearLayout>